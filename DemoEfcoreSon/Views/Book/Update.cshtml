@model DemoEfcoreSon.ViewModels.CreateBookVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Create Book</h2>
<br>
<form method="post" asp-controller="Book" asp-action="Update">
    <input asp-for="Book.BookId" hidden>
    <div class="form-group">
        <label asp-for="Book.Name"></label>
        <input type="text" class="form-control" asp-for="Book.Name">
        <span class="text-danger" asp-validation-for="Book.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input type="text" class="form-control" asp-for="Book.Author">
        <span class="text-danger" asp-validation-for="Book.Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.PageNumber"></label>
        <input type="text" class="form-control" asp-for="Book.PageNumber">
        <span class="text-danger" asp-validation-for="Book.PageNumber"></span>
    </div>
    <div class="form-group">
        <label>Shop</label>
        @Html.DropDownListFor(x => x.Book.ShopId, Model.ShopList, "Please select Shop", new { @class = "form-control" })
        <span class="text-danger" asp-validation-for="Book.ShopId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>