@model List<DemoEfcoreSon.Models.Book>

<a class="btn btn-success" asp-controller="Book" asp-action="Create">Create</a>
<h1>Book</h1>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Page Number</th>
        <th scope="col">Author</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    @{
        var i = 1;
    }
    @foreach (var book in Model)
    {
        <tr>
            <th scope="row">@i</th>
            <td>@book.Name</td>
            <td>@book.PageNumber</td>
            <td>@book.Author</td>=
            <td>
                <a class="btn btn-warning" asp-controller="Book" asp-action="Update" asp-route-bookId="@book.BookId">Update</a>
                <a onClick="confirm('Do you want to delete')" class="btn btn-danger" asp-controller="Book" asp-action="Delete" asp-route-bookId="@book.BookId">Delete</a>
            </td>
        </tr>
        i++;
    }
    </tbody>
</table>